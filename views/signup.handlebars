<main>
{{> navbar }}
{{> header }}

<form id="signup" class="global-form">
    <h2>Signup</h2>
    <div class="form-group">
        <label for="username-signup">Username</label>
        <input type="text" class="form-control" id="username-signup" name="username" required>
    </div>
    <div class="form-group">
        <label for="email-signup">Email address</label>
        <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp" name="email" required>

    </div>
    <div class="form-group">
        <label for="password-signup">Password</label>
        <input type="password" class="form-control" id="password-signup" name="password" required>
    </div>
    <div class="form-group-center">
        <label for="user-img">JPG or PDF uploads</label>
        <input type="file" class="form-control-file" id="user-img" name="user-img" accept="images/*">
    </div>
    <div id="long-form">
        <div class="form-group">
            <label for="bio">About</label>
            <input type="text" class="form-control" id="bio" name="bio">
        </div>
        <div class="form-group">
            <label for="medium"> Locaton </label>
            <input type="text" class="form-control" id="medium" name="medium">
        </div>
    </div>
    <button type="submit" id="submitButton" class="submit">Submit</button>
</form>

</main>